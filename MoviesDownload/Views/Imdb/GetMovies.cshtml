@model IEnumerable<MoviesDownload.Models.Movies>
@using MoviesDownload.Models

@{
    ViewBag.Title = "GetMovies";
}

<h1 style="text-align: center;color: orangered;">Movies List</h1>

<h2>
    @Html.ActionLink("Create New Movie", "AddMovie", "Movie")
</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.Label("Year Of Release")
        </th>
        <th>
            @Html.Label("Actors")
        </th>
        <th>
            @Html.Label("Producer")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Poster)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yearofrelease)
            </td>
            <td>
                @foreach (var x in item.Actors)
                {
                    @Html.DisplayFor(m => x.Name)
                    <br />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producer.Name)
            </td>
            <td>
                @{
                    var base64 = Convert.ToBase64String(item.Poster);
                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                }

                <img src="@imgSrc" alt="@item.Name" style="height:200px;width:200px;" />
            </td>

            <td>
                <a href="javascript:void(0);" class="anchorDetail" data-id="@item.MovieId">Details</a>
                | @Html.ActionLink("Edit", "EditMovie", "Movie", new { id = item.MovieId }, null)
            </td>
        </tr>
    }

</table>

<div id='myModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>

</div>

@section scripts
{
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>

        var TeamDetailPostBackURL = '/Imdb/GetmovieDetails';
        $(function () {
            $(".anchorDetail").click(function () {
                debugger;
                var $buttonClicked = $(this);
                var id = $buttonClicked.attr('data-id');
                var options = { "backdrop": "static", keyboard: true };
                $.ajax({
                    type: "GET",
                    url: TeamDetailPostBackURL,
                    contentType: "application/json; charset=utf-8",
                    data: { "id": id },
                    datatype: "json",
                    success: function (data) {
                        debugger;
                        $('#myModalContent').html(data);
                        $('#myModal').modal(options);
                        $('#myModal').modal('show');

                    },
                    error: function () {
                        alert("Dynamic content load failed.");
                    }
                });
            });
            
        });

    </script>

}
